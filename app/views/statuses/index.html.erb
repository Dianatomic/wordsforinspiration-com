<div class="row">
  <div class="small-10 columns">
    <h1>Collections</h1>
    <p>Create simple yet helpful word collections.</p>

    <div class="row">
      <div class="small-8 columns">
        <%= form_tag("/search", method: "get") do %>
          <%= text_field_tag("Search", nil, :placeholder => "What are you writing about?") %>
      </div>
      <div class="small-4 columns"><%= submit_tag("Search", class: "button prefix") %></div>
        <% end %>
    </div>

    <div class="row">
      <div class="small-12 columns">
        <table>
          <tr>
            <th>Subject</th>
            <th>Words</th>
          </tr>

        <% @statuses.each do |status| %>
          <tr>
            <td><%= status.name %></td>
            <td><%= status.content %></td>
            <td><%= link_to 'Show', status %></td>
            <td><%= link_to 'Edit', edit_status_path(status) %></td>
            <td><%= link_to 'Delete', status, method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
        <% end %>
        </table>

        <br />

        <%= link_to 'New Collection', new_status_path %>
      </div>
    </div>
  </div>
</div>